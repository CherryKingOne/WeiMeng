# ==============================================
# WeiMeng System Environment Variables
# ==============================================

# ----------------------------------------------
# Backend Configuration
# ----------------------------------------------

# App Settings
APP_ENV=development
SECRET_KEY=super-secret-key-change-it
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=30

# Database Connection
# For local development (outside Docker), use localhost:5400
# For Docker Compose, these are overridden in docker-compose.yaml to use service names
POSTGRESQL_HOST=0.0.0.0
POSTGRESQL_PORT=5400
POSTGRESQL_USER=weimeng
POSTGRESQL_PASSWORD=weimeng
POSTGRESQL_DB=weimeng

# Redis Connection
# For local development (outside Docker), use localhost:6300
REDIS_HOST=0.0.0.0
REDIS_PORT=6300
REDIS_DB=0
REDIS_PASSWORD=weimeng

# SMTP Email Service
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=secret
SMTP_USE_TLS=True

# AI Services Configuration
# Compatible with OpenAI, DeepSeek, Moonshot, etc.
OPENAI_API_KEY=sk-placeholder
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4o
OPENAI_CONTEXT_WINDOW=128000
OPENAI_STREAMING=True
OPENAI_ENABLE_REASONING=False
OPENAI_TEMPERATURE=0.7

# Langfuse Monitoring
LANGFUSE_SECRET_KEY=sk-lf-placeholder
LANGFUSE_PUBLIC_KEY=pk-lf-placeholder
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# ----------------------------------------------
# Frontend Configuration
# ----------------------------------------------
# Port for the Next.js server
FRONTEND_PORT=5678
# API Base URL (client-side)
NEXT_PUBLIC_API_URL=http://localhost:5607/api/v1
